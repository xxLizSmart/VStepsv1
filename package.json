{
  "name": "vsteps-desktop",
  "version": "1.0.0",
  "description": "VSteps Desktop - Control your PC keyboard by walking in place",
  "main": "src/main.js",
  "author": "VSteps",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "bonjour-service": "^1.2.1",
    "electron-store": "^8.1.0",
    "robotjs": "^0.6.0",
    "socket.io-client": "^4.7.2",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.vsteps.desktop",
    "productName": "VSteps Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "icon": "assets/icon.png",
    "win": {
      "target": ["nsis", "portable"]
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  }
}
